{% extends "base.jinja" %}
{% block content %}
<H1>List of countries</H1>
(the numbers are the numbers for the last full day)
<table data-toggle="table" class="table-sm table-striped table-hover table" data-search="true">
    <thead>
    <tr>
        <th data-sortable="true">Country</th>
        <th data-sortable="true" data-align="right">Active</th>
        <th data-sortable="true" data-align="right">Active/(1M ppl)</th>
        <th data-sortable="true" data-align="right">Cases</th>
        <th data-sortable="true" data-align="right">Cases/(1M ppl)</th>
        <th data-sortable="true" data-align="right">Deaths</th>
        <th data-sortable="true" data-align="right">Deaths/(1M ppl)</th>
        <th data-sortable="true" data-align="right">Recovered</th>
        <th data-sortable="true" data-align="right">Recovered/(1M ppl)</th>
    </tr>
    </thead>
    <tbody>
    {% for country in countries %}
    <tr>
        <td>
            <A href="{{country}}.html">{{country}}</A>
        </td>
        <td>{{(countries[country].cases - countries[country].deaths - countries[country].recovered) }}</td>
        <td>{{(1000000*(countries[country].cases - countries[country].deaths - countries[country].recovered)/countries[country].inhabitants) | round(1)}}
        </td>
        <td>{{countries[country].cases}}</td>
        <td>{{(1000000*countries[country].cases/countries[country].inhabitants) | round(1)}}</td>
        <td>{{countries[country].deaths}}</td>
        <td>{{(1000000*countries[country].deaths/countries[country].inhabitants) | round(1)}}</td>
        <td>{{countries[country].recovered}}</td>
        <td>{{(1000000*countries[country].recovered/countries[country].inhabitants) | round(1)}}</td>
    </tr>
    {% endfor %}

    </tbody>
</table>

{% endblock %}
